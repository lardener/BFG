	<modelVersion>4.0.0</modelVersion>
	<groupId>BFG</groupId>
	<artifactId>BFG</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.5.1</version>
